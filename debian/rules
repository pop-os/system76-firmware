#!/usr/bin/make -f

export VENDORED ?= 1
export CARGO_BIN ?= cargo-1.80
CLEAN ?= 1

%:
	dh $@ --with=systemd

override_dh_auto_build:
	env CARGO_HOME="$$(pwd)/target/cargo" \
	dh_auto_build

override_dh_auto_clean:
ifeq ($(CLEAN),1)
	make clean
endif
ifeq ($(VENDORED),1)
	if ! ischroot; then \
		make vendor; \
	fi
endif
